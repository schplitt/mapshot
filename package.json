{
  "name": "mapshot",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.13.1",
  "description": "Generate high-quality map screenshots with markers, custom zoom levels, and flexible positioning. Includes CLI interface and MCP server support.",
  "author": "schplitt",
  "license": "MIT",
  "homepage": "https://github.com/schplitt/mapshot#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schplitt/mapshot.git"
  },
  "bugs": {
    "url": "https://github.com/schplitt/mapshot/issues"
  },
  "keywords": [
    "map",
    "screenshot",
    "maps",
    "cli",
    "automation",
    "markers",
    "geolocation",
    "cartography",
    "mcp"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mapshot": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit -p tsconfig.node.json && vue-tsc --noEmit -p tsconfig.app.json",
    "build": "vite build && tsdown",
    "release": "bumpp && pnpm publish",
    "prepack": "pnpm build",
    "prepublishOnly": "pnpm lint && pnpm typecheck",
    "dev:map": "vite",
    "build:map": "vite build",
    "stub:map": "vite build --watch"
  },
  "dependencies": {
    "@tmcp/adapter-valibot": "catalog:mcp",
    "@tmcp/transport-stdio": "catalog:mcp",
    "citty": "catalog:cli",
    "consola": "catalog:cli",
    "defu": "catalog:deps",
    "leaflet": "catalog:deps",
    "puppeteer": "catalog:deps",
    "tmcp": "catalog:cli",
    "valibot": "catalog:deps",
    "vue": "catalog:deps"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@types/leaflet": "catalog:types",
    "@types/node": "catalog:types",
    "@vitejs/plugin-vue": "catalog:dev",
    "bumpp": "catalog:dev",
    "changelogen": "catalog:dev",
    "eslint": "catalog:lint",
    "lint-staged": "catalog:lint",
    "simple-git-hooks": "catalog:lint",
    "tsdown": "catalog:build",
    "typescript": "catalog:dev",
    "vite": "catalog:dev",
    "vite-plugin-singlefile": "catalog:dev",
    "vue-tsc": "catalog:dev"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && pnpm dlx lint-staged"
  },
  "lint-staged": {
    "*": "eslint . --fix"
  }
}
